[core]
	pager =
	autocrlf = false
	quotePath = false

[advice]
	statusHints = false

[alias]
	br = branch -vv
	ci = commit
	co = checkout
	cp = cherry-pick -x
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cpq = cherry-pick --quit
	di = diff
	diffc = diff --color
	lg = log --oneline --graph
	lga = log --oneline --graph --all
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbe = rebase --edit-todo
	rbp = rebase --show-current-patch
	rbs = rebase --skip
	rbq = rebase --quit
	sm = submodule
	st = status --short --branch
	sw = switch
	unstage = reset HEAD --
	wt = worktree

[branch]
	autosetuprebase = always

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "decorate"]
	HEAD = blue
	branch = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[commit]
	verbose = true

[fetch]
	prune = true
	pruneTags = true

[gc]
	auto = 0

[grep]
	linenumber = true

[init]
	templatedir =

[log]
	date = iso8601

[merge]
	tool = vimdiff

[mergetool]
	keepBackup = false

[pull]
	rebase = true

[push]
	default = upstream

[rebase]
	stat = true

[sendemail]
	confirm = always
	envelopeSender = auto
	smtpServer = msmtp
	suppressFrom = true
	xmailer = false

[status]
	showStash = true

[tag]
	sort = version:refname

[user]
	useConfigOnly = true

[versionsort]
	suffix = snapshot
	suffix = beta
	suffix = rc
	suffix =

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true

[filter "git-crypt"]
	smudge = git-crypt smudge
	clean = git-crypt clean
	required = true

[diff "git-crypt"]
	textconv = git-crypt diff

[diff "gpg"]
	binary = true
	textconv = gpg -d --no-verbose --quiet

[include]
	path = ~/.config/rc-local/.gitconfig.local
	path = ~/.gitconfig.local
