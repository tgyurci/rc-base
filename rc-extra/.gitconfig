[core]
	pager =
	autocrlf = false

[advice]
	statusHints = false

[alias]
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick -x
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cpq = cherry-pick --quit
	di = diff
	diffc = diff --color
	lg = log --oneline --graph --all
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbe = rebase --edit-todo
	rbs = rebase --skip
	sm = submodule
	st = status --short --branch
	unstage = reset HEAD
	wt = worktree

[branch]
	autosetuprebase = always

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "decorate"]
	HEAD = blue
	branch = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[commit]
	verbose = true

[fetch]
	prune = true
	pruneTags = true

[gc]
	auto = 0

[grep]
	linenumber = true

[init]
	templatedir =

[log]
	date = iso8601

[merge]
	tool = vimdiff

[mergetool]
	keepBackup = false

[pull]
	rebase = true

[push]
	default = upstream

[rebase]
	stat = true

[sendemail]
	confirm = always
	envelopeSender = auto
	smtpServer = msmtp
	suppressFrom = true
	xmailer = false

[status]
	showStash = true

[tag]
	sort = version:refname

[user]
	useConfigOnly = true

[versionsort]
	suffix = snapshot
	suffix = beta
	suffix = rc
	suffix =

[include]
	path = ~/.gitconfig.local
