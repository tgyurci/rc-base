" ~root/.vimrc

set nocompatible
set nomodeline
set viminfo=
set visualbell
set t_vb=
set backspace=start,eol,indent
set tabstop=4
set shiftwidth=4
set nowrap
set ruler
set showmode
set showcmd
set wildmenu
set shortmess+=I
set showbreak=>
set ignorecase
set smartcase
syntax on

let g:netrw_dirhistmax=0
