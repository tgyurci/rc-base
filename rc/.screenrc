# ~tgyurci/.screenrc

startup_message off

#defflow on # will force screen to process ^S/^Q

autodetach on
altscreen on
defscrollback 1000
nethack on

vbell off

hardstatus off
hardstatus string "%h"

#caption always "%{yK}   -=%H=- | $LOGNAME | %{yK}%c |  %{yK}%-Lw%{yK}%50>%{Ky}%n%f* %t%{-}%+Lw%<%{- Wk}"
#caption always "   -=%H=- | $LOGNAME | %c |  %-Lw%50>%n%f* %t%{-}%+Lw%<%{- Wk}"
#caption always " -=%H=- | $LOGNAME | %c | "
caption always " Screen: %H %-Lw%50>%n%f* %t%{-}%+Lw%<%{- Wk}"
activity "%"

#attrcolor b "-b R"
#attrcolor u "-u b"

bind 'R' wrap
bind 'r' resize
bind '+' resize +1
bind '=' resize +1
bind '-' resize -1

termcapinfo xterm* hs:ts=\033]0;:fs=\007:ds=\033]0;\007
